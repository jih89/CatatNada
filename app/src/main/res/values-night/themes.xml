<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CatatNada" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        
        <!-- Shape appearance -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.CatatNada.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.CatatNada.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.CatatNada.LargeComponent</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.CatatNada.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.CatatNada.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.CatatNada.HeadlineSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.CatatNada.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.CatatNada.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.CatatNada.BodySmall</item>
    </style>
</resources>